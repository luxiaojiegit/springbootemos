<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.emos.wx.db.dao.TbHolidaysMapper">

    <resultMap id="BaseResultMap" type="com.example.emos.wx.db.bean.TbHolidays">
            <id property="id" column="id" jdbcType="OTHER"/>
            <result property="date" column="date" jdbcType="DATE"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,date
    </sql>

    <select id="searchTodayIsHolidays" resultType="Integer">
        SELECT id FROM tb_holidays WHERE date=CURRENT_DATE LIMIT 1;
    </select>

    <select id="searchHolidaysInRange" parameterType="HashMap" resultType="String">
        SELECT date
        FROM tb_holidays
        WHERE date BETWEEN #{startDate} AND #{endDate}
    </select>
</mapper>
